# Database (Development: SQLite, Production: PostgreSQL)
# For development, use SQLite:
DATABASE_URL=sqlite:///./integ.db

# For production with PostgreSQL:
# DATABASE_URL=postgresql://integ_user:integ_password@localhost:5432/integ_db

# Redis (Development: optional, Production: required)
# REDIS_URL=redis://localhost:6379/0

# Backend
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production-min-32chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BACKEND_URL=http://localhost:8000

# Steam API
# Get API key from: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your-steam-api-key-here

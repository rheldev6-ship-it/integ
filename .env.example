# Database (Development: SQLite, Production: PostgreSQL)
# For development, use SQLite:
DATABASE_URL=sqlite:///./integ.db

# For production with PostgreSQL:
# DATABASE_URL=postgresql://integ_user:integ_password@localhost:5432/integ_db

# Redis (Development: optional, Production: required)
# REDIS_URL=redis://localhost:6379/0

# Backend
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Steam API
STEAM_API_KEY=your-steam-api-key
STEAM_OPENID_ENDPOINT=https://steamcommunity.com/openid/login

# GOG API
GOG_CLIENT_ID=your-gog-client-id
GOG_CLIENT_SECRET=your-gog-client-secret
GOG_REDIRECT_URI=http://localhost:8000/auth/gog/callback

# Frontend
BACKEND_URL=http://localhost:8000

# Proton
PROTON_GITHUB_REPO=GloriousEggroll/proton-ge-custom
